{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"outDir": "./../out",
		"rootDir": ".",
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"alwaysStrict": true,

		"moduleResolution": "node",
		"esModuleInterop": true,

		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true
	},
	"references": [{ "path": "../" }]
}
